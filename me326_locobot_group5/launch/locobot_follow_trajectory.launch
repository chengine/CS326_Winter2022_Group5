<?xml version="1.0" ?>
<launch>

  <!-- run the saved rviz environment -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find me326_locobot_group5)/rviz/rviz_example_env.rviz" />

  <arg name="bags_directory" value="/home/dardeshna/Documents/bags"/>
  <arg name="record_bag_bool" default="true"/>
  <!-- Be careful to specify/change this for each run you record -->
  <arg name="bag_name" default="true"/>

  <node name="bag_record" pkg="rosbag" type="record"
    args="record -o $(arg bags_directory)/$(arg bag_name) /locobot/mobile_base/odom /locobot/mobile_base/target_pose_visual"
    if="$(eval record_bag_bool)"/>

  <!-- Now run the node for going from point A to B -->
  <node type="locobot_follow_trajectory.py" name="locobot_follow_trajectory" pkg="me326_locobot_group5" respawn="true" output="screen"/>

</launch>



<?xml version="1.0" ?>
<launch> <!-- set up the robot parameters-->

  <arg name="robot_model"                       default="locobot_wx250s"/>
  <arg name="robot_name_1"                      default="locobot_1"/>
  <arg name="robot_name_2"                      default="locobot_2"/>
  <arg name="use_gazebo"                        default="true"/>
  <arg name="gui"                               default="true"/>
  <arg name="debug"                             default="false"/>
  <arg name="paused"                            default="true"/>
  <arg name="recording"                         default="false"/>
  <arg name="use_sim_time"                      default="true"/>
  <arg name="world_name"                        default="$(find interbotix_xslocobot_gazebo)/worlds/xslocobot_gazebo.world"/>
  <arg name="rvizconfig"                        default="$(find interbotix_xslocobot_descriptions)/rviz/many-robot-copy1.rviz" />
  

  <include file="$(find gazebo_ros)/launch/empty_world.launch"> <!-- create an empty world-->
    <arg name="world_name"                        value="$(arg world_name)"/>
    <arg name="gui"                               value="$(arg gui)" />
    <arg name="debug"                             value="$(arg debug)" />
    <arg name="paused"                            value="$(arg paused)"/>
    <arg name="recording"                         value="$(arg recording)"/>
    <arg name="use_sim_time"                      value="$(arg use_sim_time)"/>
  </include>
  
  
  <!-- configure the world for each robot-->
  <include file="$(find interbotix_xslocobot_gazebo)/launch/xslocobot_gazebo_copy1.launch"> 
    <arg name="robot_model"                       value="$(arg robot_model)"/>
    <arg name="robot_name"                        value="$(arg robot_name_1)"/>
  </include>
  

  <include file="$(find interbotix_xslocobot_gazebo)/launch/xslocobot_gazebo_copy1.launch"> 
    <arg name="robot_model"                       value="$(arg robot_model)"/>
    <arg name="robot_name"                        value="$(arg robot_name_2)"/>
  </include>

  
<!--
  <include file="$(find interbotix_xslocobot_moveit)/launch/xslocobot_moveit_copy1.launch">
    <arg name="robot_model"                       value="$(arg robot_model)"/>
    <arg name="robot_name"                        value="$(arg robot_name_1)"/>
    <arg name="show_lidar"                        value="true"/>
    <arg name="use_gazebo"                        value="$(arg use_gazebo)"/>
    <arm name="dof"                               value="6"/>
  </include>

    
  <include file="$(find interbotix_xslocobot_moveit)/launch/xslocobot_moveit_copy1.launch">
    <arg name="robot_model"                       value="$(arg robot_model)"/>
    <arg name="robot_name"                        value="$(arg robot_name_2)"/>
    <arg name="show_lidar"                        value="true"/>
    <arg name="use_gazebo"                        value="$(arg use_gazebo)"/>
    <arm name="dof"                               value="6"/>
  </include>
-->
    
  <!--node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(arg rvizconfig)"
    required="true"/-->

  <node
    name="robot_transform_broadcaster_1"
    pkg="tf2_ros"
    type="static_transform_publisher"
    args="0 0 0 0 0 0 /world /$(arg robot_name_1)/base_footprint"/>

  <node
    name="robot_transform_broadcaster_2"
    pkg="tf2_ros"
    type="static_transform_publisher"
    args="1 0 0 3.14 0 0 /world /$(arg robot_name_2)/base_footprint"/>

</launch>
